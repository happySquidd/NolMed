<Application x:Class="NolMed.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NolMed"
             StartupUri="MainWindow.xaml"
             
             xmlns:viewmodels="clr-namespace:NolMed.views.models"
             xmlns:views="clr-namespace:NolMed.views.usercontrol">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:DeskViewModel}">
            <views:DeskView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:RegisterViewModel}">
            <views:RegisterView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:PatientViewModel}">
            <views:PatientView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:PatientVitalsViewModel}">
            <views:PatientVitalsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

    </Application.Resources>
</Application>
